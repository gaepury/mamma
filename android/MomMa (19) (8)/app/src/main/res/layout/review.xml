<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="13dp"
            android:paddingRight="23dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/home_review"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰가 많은 분유"
                android:textStyle="bold"
                android:textColor="#67C570"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="4dp"
                android:layout_weight="7"/>
            <Button
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:id="@+id/manyreviewbut"
                android:background="@drawable/home_more"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEEE" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/manyreviewlayout4"
                android:paddingTop="10dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/home_drymilk_1"
                    android:layout_gravity="center"
                    android:id="@+id/RevTab_Drymilk_IV1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="27dp"
                        android:src="@drawable/home_first"
                        android:id="@+id/Search_Number_IV"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분유회사"
                            android:id="@+id/RevTab_Company_TV1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분유A"
                            android:id="@+id/RevTab_Drymilk_TV1"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/manyreviewlayout5"
                android:paddingTop="10dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/home_drymilk_1"
                    android:layout_gravity="center"
                    android:id="@+id/RevTab_Drymilk_IV2"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="27dp"
                        android:src="@drawable/home_first" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분유회사"
                            android:id="@+id/RevTab_Company_TV2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분유A"
                            android:id="@+id/RevTab_Drymilk_TV2"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/manyreviewlayout6"
                android:paddingTop="10dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/home_drymilk_1"
                    android:layout_gravity="center"
                    android:id="@+id/RevTab_Drymilk_IV3"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="27dp"
                        android:src="@drawable/home_first" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분유회사"
                            android:id="@+id/RevTab_Company_TV3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분유A"
                            android:id="@+id/RevTab_Drymilk_TV3"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="안녕"/>-->
        </LinearLayout>




    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EAEAEA" />

    <RelativeLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="7dp"

            android:src="@drawable/review_cart"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reviewviewnickname1"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textColor="#67C570"
            android:text="XXX"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            android:textColor="#67C570"
            android:text="님과 비슷한 아이가 먹는 분유입니다."/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="26dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginTop="12dp"

                android:src="@drawable/review_photo"
                android:id="@+id/babyphoto_IV"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginLeft="28dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reviewviewnickname2"
                    android:textSize="12dp"
                    android:text="닉네임"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="55dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/greenbox"
                    android:id="@+id/reviewviewmonth"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:text="개월 수"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    >



                    <Button
                    android:layout_width="55dp"
                    android:layout_height="28dp"
                    android:background="@drawable/greenbox"
                    android:layout_marginLeft="11dp"
                    android:visibility="invisible"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:text="알레르기"
                    android:id="@+id/reviewviewworry1"/>

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="28dp"
                        android:background="@drawable/greenbox"
                        android:layout_marginLeft="11dp"
                        android:visibility="invisible"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        android:text="아토피"
                        android:id="@+id/reviewviewworry2"/>

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="28dp"
                        android:background="@drawable/greenbox"
                        android:layout_marginLeft="11dp"
                        android:textColor="#ffffff"
                        android:visibility="invisible"
                        android:textSize="10dp"
                        android:text="배변"
                        android:id="@+id/reviewviewworry3"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/similarreview"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:id="@+id/reviewviewimg"
                    android:src="@drawable/drymilk_1_75dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:id="@+id/reviewviewname"
                    android:textColor="#67C570"
                    android:textStyle="bold"
                    android:text="그랑노블"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:id="@+id/SimilarLevel_TV"

                    android:textColor="#67C570"
                    android:textStyle="bold"
                    android:text="3단계"/>

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="128dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="18dp"

                android:background="#CDCDCD"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"

                        android:src="@drawable/reivew_good"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="37dp"
                        android:layout_gravity="center_vertical"

                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:text="평점"/>

                    <RatingBar
                        android:id="@+id/reviewviewrating"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:rating="0"
                        android:stepSize="0.5" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/review_smile"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"

                        android:textColor="#67C570"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="한줄평"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="28dp"
                    android:id="@+id/reviewviewcontent"
                    android:textSize="10dp"
                    android:text="내용"/>





            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEA" />


</LinearLayout>